#!/bin/bash
set -euo pipefail

debug_mode='off'
if [[ "${BUILDKITE_PLUGIN_ARTIFACTS_DEBUG:-false}" =~ (true|on|1) ]] ; then
  echo "--- :hammer: Enabling debug mode"
  debug_mode='on'
  set -x
fi

if [[ -z "${BUILDKITE_PLUGIN_ARTIFACTS_WORKDIR:-}" ]] ; then
  BUILDKITE_PLUGIN_ARTIFACTS_WORKDIR="."
fi

paths=()

if [[ -n "${BUILDKITE_PLUGIN_ARTIFACTS_DOWNLOAD:-}" ]] ; then
  paths+=("$BUILDKITE_PLUGIN_ARTIFACTS_DOWNLOAD")
fi

while IFS='=' read -r path _ ; do
  if [[ $path =~ ^(BUILDKITE_PLUGIN_ARTIFACTS_DOWNLOAD_[0-9]+) ]] ; then
    paths+=("${!path}")
  fi
done < <(env | sort)


if [ "${#paths[@]}" -gt 0 ]; then
  echo "--- Downloading artifacts"
  buildkite-agent artifact download "$(IFS=, ; echo "${paths[*]}")" "${BUILDKITE_PLUGIN_ARTIFACTS_WORKDIR}"
fi
